<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.ChatRoomMapper">

    <resultMap id="ChatRoomMap" type="com.example.demo.domain.ChatRoom">
        <id property="roomId" column="room_id"/>
        <result property="roomName" column="room_name"/>
        <result property="enterPassword" column="enter_password"/>
        <result property="deletePassword" column="delete_password"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- ✅ 모든 채팅방 조회 -->
    <select id="findAll" resultMap="ChatRoomMap">
        SELECT * FROM chat_room ORDER BY created_at DESC
    </select>

    <!-- ✅ 특정 채팅방 조회 -->
    <select id="findById" parameterType="long" resultMap="ChatRoomMap">
        SELECT * FROM chat_room WHERE room_id = #{roomId}
    </select>

    <!-- ✅ 채팅방 생성 -->
    <insert id="insertRoom" parameterType="com.example.demo.domain.ChatRoom"
            useGeneratedKeys="true" keyProperty="roomId">
        INSERT INTO chat_room (room_name, enter_password, delete_password, created_at)
        VALUES (#{roomName}, #{enterPassword}, #{deletePassword}, NOW())
    </insert>

    <!-- ✅ 채팅방 삭제 -->
    <delete id="deleteRoom" parameterType="long">
        DELETE FROM chat_room WHERE room_id = #{roomId}
    </delete>

</mapper>
